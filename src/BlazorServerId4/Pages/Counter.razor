@page "/counter"
@inject HttpClient _http

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<AuthorizeView>
    @{
        if (context.User.IsInRole("IdentityAdminAdministrator"))
        {
            <h1>auth id admin</h1>
        }
    }
</AuthorizeView>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    public async Task IncrementCount()
    {
        //  var employees = await _http.GetFromJsonAsync<bool>("api/seeding/init");



        var myobj = new
        {
            id = 1
        };
        var response = _http.PostAsJsonAsync($"api/seeding/init", myobj);
        bool result = await response.Result.Content.ReadFromJsonAsync<bool>();
        if (result)
        {
            currentCount++;
        }
    }
}
