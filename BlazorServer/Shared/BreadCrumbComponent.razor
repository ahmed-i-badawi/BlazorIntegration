
<div class="row">
    <div class="col-lg-12 p-l-0 title-margin-left">
        <div class="page-header">
            <div class="page-title">
                <ol class="breadcrumb">
                    @foreach (var i in Items)
                    {
                        if (!i.Item3)
                        {
                            <li class="breadcrumb-item active"><a href="@i.Item2">@i.Item1</a></li>
                        }
                        else
                        {
                            <li class="breadcrumb-item">@i.Item1</li>
                        }
                    }
                </ol>
            </div>
        </div>
    </div>
</div>
<hr />

@code {
    [Parameter]
    public List<Tuple<string, string, bool>> Items { get; set; }
}